<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ssui.miti.org.thedroneapp"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="15"
        android:targetSdkVersion="21" />

    <uses-permission android:name="android.permission.INTERNET" />

    <uses-feature
        android:name="android.hardware.touchscreen"
        android:required="false" />
    <uses-feature
        android:name="android.software.leanback"
        android:required="true" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/appicon"
        android:label="mantis"
        android:theme="@style/AppTheme" >

        <!-- Splash screen -->
        <activity
            android:name="ssui.miti.org.thedroneapp.SplashScreen"
            android:label="mantis"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.Black.NoTitleBar" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="ssui.miti.org.thedroneapp.MainActivity"
            android:label="mantis"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="ssui.miti.org.thedroneapp.ColorPickerActivity"
            android:label="Color Pickerr"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="ssui.miti.org.thedroneapp.VideoViewActivity"
            android:label="Video View Activity"
            android:screenOrientation="portrait" >
        </activity>
    </application>

</manifest>